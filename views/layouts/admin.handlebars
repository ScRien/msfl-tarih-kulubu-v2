<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Paneli | MSFL Tarih Kulübü</title>
  
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Admin CSS -->
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

  <div class="admin-layout">
    
    <!-- SIDEBAR -->
    <aside class="admin-sidebar">
      <div class="admin-header">
        <h2>MSFL ADMIN</h2>
      </div>

      <nav class="admin-nav">
        <a href="/admin/dashboard" class="admin-link {{#if (eq active 'dashboard')}}active{{/if}}">
          <i class="fa-solid fa-chart-pie"></i>
          <span>Dashboard</span>
        </a>
        
        <a href="/admin/kullanicilar" class="admin-link {{#if (eq active 'users')}}active{{/if}}">
          <i class="fa-solid fa-users"></i>
          <span>Kullanıcılar</span>
        </a>
        
        <a href="/admin/bloglar" class="admin-link {{#if (eq active 'blogs')}}active{{/if}}">
          <i class="fa-solid fa-file-pen"></i>
          <span>Bloglar</span>
        </a>
        
        <a href="/admin/yorumlar" class="admin-link {{#if (eq active 'comments')}}active{{/if}}">
          <i class="fa-solid fa-comments"></i>
          <span>Yorumlar</span>
        </a>
      </nav>

      <div class="admin-logout">
        <a href="/admin/cikis" class="admin-link">
          <i class="fa-solid fa-right-from-bracket"></i>
          <span>Çıkış Yap</span>
        </a>
      </div>
    </aside>

    <!-- CONTENT -->
    <main class="admin-content">
      {{{body}}}
    </main>

  </div>

  <script src="/js/speed-insights.js" type="module"></script>
</body>
</html>