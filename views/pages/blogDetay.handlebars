<section class="blog-detail-section">
  <div class="blog-detail-container">

    {{!-- ÜST MESAJLAR --}}
    {{#if success}}
      <div class="alert success">{{success}}</div>
    {{/if}}

    {{#if error}}
      <div class="alert error">{{error}}</div>
    {{/if}}

    {{!-- BLOG BİLGİLERİ --}}
    <h1 class="blog-title">{{post.title}}</h1>

    <div class="blog-meta">
      <span class="meta-item">
        <i class="fa-solid fa-user"></i> {{post.username}}
      </span>
      <span class="meta-item">
        <i class="fa-solid fa-calendar"></i> {{post.date}}
      </span>
    </div>

    {{!-- BLOG GÖRSELLERİ --}}
    {{#if post.images.length}}
      <div class="detail-images">
        {{#each post.images}}
          <img src="{{this.url}}" alt="Blog Image" class="detail-img" />
        {{/each}}
      </div>
    {{/if}}

    {{!-- BLOG İÇERİĞİ --}}
    <div class="blog-content">
      {{{post.content}}}
    </div>

    {{!-- SAHİP / ADMIN İŞLEMLERİ --}}
    {{#if isAuth}}
      <div class="owner-actions">
        {{#if isOwner}}
          <a href="/blog/{{post._id}}/duzenle" class="btn edit-btn">Düzenle</a>

          <form action="/blog/{{post._id}}/sil" method="POST" class="inline-form">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <button type="submit" class="btn delete-btn">Sil</button>
          </form>
        {{/if}}

        {{#if isAdmin}}
          <a href="/blog/{{post._id}}/duzenle" class="btn admin-edit">Admin Düzenle</a>

          <form action="/blog/{{post._id}}/sil" method="POST" class="inline-form">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <button type="submit" class="btn admin-delete">Admin Sil</button>
          </form>
        {{/if}}
      </div>
    {{/if}}

    <hr class="divider" />

    {{!-- YORUMLAR --}}
    <h2 class="comments-title">Yorumlar</h2>

    {{#if comments.length}}
      <div class="comments-list">
        {{#each comments}}
          <div class="comment-box">
            <div class="comment-header">
              <strong>{{this.username}}</strong>
              <span class="comment-date">{{this.date}}</span>
            </div>

            <p class="comment-text">{{this.content}}</p>

            {{!-- YORUM SAHİBİ / ADMIN --}}
            {{#if ../isAuth}}
              {{#if (or (eq ../currentUserId this.user_id) (eq ../currentRole "admin"))}}
                <div class="comment-actions">
                  
                  <form
                    action="/blog/{{../post._id}}/yorum/{{this._id}}/sil"
                    method="POST"
                    class="inline-form"
                  >
                    <input type="hidden" name="_csrf" value="{{../csrfToken}}" />
                    <button class="comment-del">Sil</button>
                  </form>

                  <form
                    action="/blog/{{../post._id}}/yorum/{{this._id}}/duzenle"
                    method="POST"
                    class="edit-comment-form"
                  >
                    <input type="hidden" name="_csrf" value="{{../csrfToken}}" />
                    <input
                      type="text"
                      name="content"
                      class="comment-edit-input"
                      placeholder="Yeni yorum..."
                      required
                    />
                    <button class="comment-edit-btn">Düzenle</button>
                  </form>

                </div>
              {{/if}}
            {{/if}}
          </div>
        {{/each}}
      </div>
    {{else}}
      <p class="no-comments">Henüz yorum yapılmamış.</p>
    {{/if}}

    <hr class="divider" />

    {{!-- YENİ YORUM FORMU --}}
    {{#if isAuth}}
      <h3 class="add-comment-title">Yorum Yaz</h3>

      <form
        method="POST"
        action="/blog/{{post._id}}/yorum"
        class="add-comment-form"
      >
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />

        <textarea
          name="content"
          class="comment-input"
          placeholder="Yorumunuzu yazın..."
          required
        ></textarea>

        <button type="submit" class="btn comment-btn">
          Yorum Gönder
        </button>
      </form>
    {{else}}
      <p class="login-to-comment">
        Yorum yapmak için <a href="/kullanici/oturumAc">giriş yap</a>.
      </p>
    {{/if}}

  </div>
</section>
