<section class="blog-edit-section">
  <div class="blog-edit-container">

    <h1 class="blog-edit-title">Blogu Düzenle</h1>

    {{#if error}}
      <div class="blog-add-alert error">{{error}}</div>
    {{/if}}

    <form id="editBlogForm" method="POST">
      <input type="hidden" name="_csrf" value="{{csrfToken}}" />
      <input type="hidden" id="deleteImages" name="deleteImages" />
      <input type="hidden" id="newImagesJson" name="newImagesJson" />

      <div class="form-row">
        <input
          type="text"
          name="title"
          class="input-field"
          value="{{post.title}}"
          required
        />
      </div>

      <div class="form-row">
        <textarea
          name="content"
          class="textarea-field"
          required
        >{{post.content}}</textarea>
      </div>

      <h3 class="current-images-title">Mevcut Görseller</h3>

      <div class="current-images">
        {{#each post.images}}
          <div class="img-box">
            <img src="{{this.url}}" alt="Blog image" />

            <label class="delete-check">
              <input
                type="checkbox"
                value="{{this.public_id}}"
                class="deleteImageCheck"
              />
              Sil
            </label>
          </div>
        {{/each}}
      </div>

      <h3>Yeni Görsel Ekle</h3>

      <div class="upload-wrapper">
        <label for="newBlogImages" class="upload-label">
          Yeni Görsel Yükle
        </label>

        <input
          type="file"
          id="newBlogImages"
          class="file-input"
          accept="image/*"
          multiple
        />
      </div>

      <button type="submit" class="blog-submit-button">
        Güncelle
      </button>
    </form>

  </div>
</section>
