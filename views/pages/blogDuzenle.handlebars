<h2>Blog Düzenle</h2>

<form action="/blog/{{post._id}}/duzenle" method="POST">

  <input type="text" name="title" value="{{post.title}}" required />

  <textarea name="content" required>{{post.content}}</textarea>

  <!-- Eski Görseller -->
  <h3>Mevcut Görseller</h3>
  <div style="display:flex; gap:10px; flex-wrap:wrap;">
    {{#each post.images}}
      <div style="position:relative;">
        <img src="{{this.url}}" width="120" />
        <label>
          <input type="checkbox" name="deleteImages" value="{{this.public_id}}" />
          Sil
        </label>
      </div>
    {{/each}}
  </div>

  <!-- Yeni Görsel Yükleme -->
  <h3>Yeni Görseller Ekle</h3>

  <input type="file" id="newImages" multiple accept="image/*" />

  <div id="editPreviewBox"></div>

  <input type="hidden" name="newImagesJson" id="newImagesJson">

  <button type="submit">Kaydet</button>
</form>

<script src="/js/blogEditUpload.js"></script>
