{{!-- views/pages/blogOlustur.handlebars --}}
<section class="blog-add-section">
  <div class="blog-add-form">
    <h1 class="blog-add-title">Kendi Tarihini Yaz!</h1>

    {{#if error}}
      <div class="blog-add-alert error">{{error}}</div>
    {{/if}}
    {{#if success}}
      <div class="blog-add-alert success">{{success}}</div>
    {{/if}}

    <form id="blogForm" method="POST" action="/blog/olustur">
      <input type="hidden" name="_csrf" value="{{csrfToken}}" />
      <div class="form-top">
        <input
          type="text"
          name="title"
          placeholder="Blog Başlığı"
          class="input-field"
          required
        />

        <div class="upload-wrapper">
          <label for="blogImages" class="upload-label">
            Görsel Yükle (max 5)
          </label>
          <input
            type="file"
            id="blogImages"
            name="images"
            class="file-input"
            accept="image/*"
            multiple
          />
          <span id="fileCount" class="file-count">Seçili dosya yok</span>
        </div>
      </div>

      <div id="previewBox" class="preview-container"></div>

      <textarea
        name="content"
        class="textarea-field"
        rows="8"
        placeholder="Blog içeriğini buraya yaz..."
        required
      ></textarea>

      <div class="warning-box">
        <strong>Uyarı:</strong>
        Lütfen hakaret içeren, yanlış veya yanıltıcı tarih bilgileri,
        kişisel veriler ve telif hakkı ihlali olabilecek içerikler
        paylaşmayınız. Gönderilen bloglar, kulüp danışman öğretmeni
        tarafından kontrol edilebilir.
      </div>

      <input type="hidden" id="imageUrls" name="imageUrls" value="[]" />

      <button type="submit" class="submit-btn">Blogu Oluştur</button>
    </form>
  </div>
</section>

<script src="/js/blogUpload.js"></script>