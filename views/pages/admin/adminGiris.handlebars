<section class="admin-login">
  <div class="admin-wrapper">
    <h1 class="admin-title">Admin Panel Girişi</h1>

    {{#if error}}
      <div class="admin-error">
        ❌ {{error}}
      </div>
    {{/if}}

    <form class="admin-form" method="POST" action="/admin/giris">
      <div class="input-group">
        <input type="password" name="adminToken" placeholder="Admin Token" required autocomplete="off" />
      </div>

      <button type="submit" class="admin-button">Gir</button>
    </form>

    <p style="text-align: center; margin-top: 20px; font-size: 14px; color: #888;">
      Token'ı danışman öğretmenlerden edinin
    </p>
  </div>
</section>