<div class="admin-search-bar">
  <h1>Yorum Düzenle</h1>
</div>

<div class="table-container" style="max-width: 600px;">
  <form action="/admin/yorum/{{comment._id}}/duzenle" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />

    <div style="margin-bottom: 20px;">
      <label style="display:block; margin-bottom:8px; font-weight:600;">Yorum
        Sahibi</label>
      <input
        type="text"
        value="{{comment.username}}"
        disabled
        class="search-input"
        style="width:100%; background:#f9f9f9;"
      />
    </div>

    <div style="margin-bottom: 20px;">
      <label style="display:block; margin-bottom:8px; font-weight:600;">Yorum
        İçeriği</label>
      <textarea
        name="content"
        rows="6"
        required
        style="width:100%; padding:12px; border-radius:8px; border:1px solid #ddd; font-family:inherit; resize:vertical;"
      >{{comment.content}}</textarea>
    </div>

    <div style="display:flex; gap:10px;">
      <button
        type="submit"
        class="action-btn btn-edit"
        style="font-size:14px; padding:10px 20px;"
      >
        <i class="fa-solid fa-save"></i>
        Kaydet
      </button>

      <a
        href="/admin/yorumlar"
        class="action-btn btn-view"
        style="font-size:14px; padding:10px 20px; text-decoration:none;"
      >
        İptal
      </a>
    </div>
  </form>
</div>