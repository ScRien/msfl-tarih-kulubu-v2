<section class="register-section">
  <div class="register-container">

    <!-- Sol Taraf -->
    <div class="register-left">
      <h2 class="register-title">Kayıt Ol</h2>

      {{#if error}}
        <p class="auth-error">{{error}}</p>
      {{/if}}

      <form
        id="register-form"
        class="register-form"
        action="/kullanici/kayitOl"
        method="POST"
      >
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <div class="form-row">
          <input
            type="text"
            name="username"
            placeholder="Kullanıcı Adı"
            class="register-input"
            minlength="3"
            maxlength="24"
            value="{{username}}"
            required
          />

          <input
            type="email"
            name="email"
            placeholder="E-mail"
            class="register-input"
            value="{{email}}"
            required
          />
        </div>

        <div class="form-row">
          <input
            type="text"
            name="name"
            placeholder="İsim"
            class="register-input"
            value="{{name}}"
            required
          />
          <input
            type="text"
            name="surname"
            placeholder="Soyisim"
            class="register-input"
            value="{{surname}}"
            required
          />
        </div>

        <div class="form-row">
          <input
            type="password"
            name="password"
            placeholder="Şifre (min. 8 karakter)"
            minlength="8"
            class="register-input"
            required
          />

          <input
            type="password"
            name="password2"
            placeholder="Şifre (Tekrar)"
            minlength="8"
            class="register-input"
            required
          />
        </div>

        <!-- KVKK ve Şartlar -->
        <div class="terms-container">
          <label class="checkbox-label">
            <input type="checkbox" name="kvkk" required />
            <span>
              <a href="/kvkk" class="terms-link" target="_blank">KVKK metnini</a>
              kabul ediyorum.
            </span>
          </label>

          <label class="checkbox-label">
            <input type="checkbox" name="privacy" required />
            <span>
              <a href="/gizlilik" class="terms-link" target="_blank">Gizlilik
                politikasını</a>
              kabul ediyorum.
            </span>
          </label>

          <label class="checkbox-label">
            <input type="checkbox" name="terms" required />
            <span>
              <a
                href="/kullanim-sartlari"
                class="terms-link"
                target="_blank"
              >Kullanıcı şartlarını</a>
              kabul ediyorum.
            </span>
          </label>
        </div>

      </form>
    </div>

    <!-- Sağ Taraf -->
    <div class="register-right">
      <h3 class="right-title">Tarih Kulübü Evrenine<br />Girmeye Hazırım!</h3>

      <button type="submit" form="register-form" class="register-button">
        Kayıt Ol
      </button>

      <p class="login-link">
        Hesabın var mı?
        <a href="/kullanici/oturumAc">Giriş yap</a>
      </p>
    </div>

  </div>
</section>
